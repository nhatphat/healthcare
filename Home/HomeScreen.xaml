<UserControl x:Class="Home.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Home"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="1020">
    <Grid Background="White">
        <StackPanel Margin="30">
            <Image Source="/Images/app/panel-home.jpg" ></Image>
            <!--<Separator/>-->
            <Grid Margin="0 30 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Images/app/panel-home-2.jpg" HorizontalAlignment="Left" />
                <Image Grid.Column="1" Source="/Images/app/panel-home-3.jpg" HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
